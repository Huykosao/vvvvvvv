@model ManageStudentsV2.Models.Lop_dang_ky

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_ManageStudentHome.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="create-forms">
        <h4>Lớp Đăng Ký</h4>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ma_sinh_vien)

        @Html.HiddenFor(model => model.ma_hoc_phan)

        <div class="field">
            @Html.LabelFor(model => model.ngay_dk,"Ngày Đăng ký", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ngay_dk, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", value = DateTime.Now.ToString("yyyy-MM-dd") })                
                @Html.ValidationMessageFor(model => model.ngay_dk, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="field">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn1" />
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn2" })
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
