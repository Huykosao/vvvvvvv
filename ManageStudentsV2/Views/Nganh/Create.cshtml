@model ManageStudentsV2.Models.Nganh

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_ManageStudentHome.cshtml";
}

@using (Html.BeginForm("Create", "Student", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="create-forms">
        <h4>Ngành</h4>
 
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="field">
            @Html.LabelFor(model => model.ma_nganh,"Mã Ngành", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ma_nganh, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ma_nganh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="field">
            @Html.LabelFor(model => model.ten_nganh,"Tên Ngành", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ten_nganh, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ten_nganh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="field">
            @Html.LabelFor(model => model.mo_ta_nganh,"Mô Tả Ngành", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.mo_ta_nganh, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.mo_ta_nganh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="field">
            @Html.LabelFor(model => model.ma_nien_khoa, "Mã Niên Khóa", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ma_nien_khoa", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ma_nien_khoa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="field">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn1" />
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn2" })
            </div>
        </div>
    </div>
}


