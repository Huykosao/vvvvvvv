@{
    ViewBag.Title = "Student Dashboard";
    Layout = "~/Views/Shared/_ManageStudentHome.cshtml";
}

<h2>Student Dashboard</h2>

<div class="dashboard">
    <div class="card">
        <h3>Total Students</h3>
        <p>150</p>
    </div>
    <div class="card">
        <h3>New Admissions</h3>
        <p>30</p>
