@model ManageStudentsV2.Models.Lop_hoc_phan

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_ManageStudentHome.cshtml";
}

<div class="create-forms">
    <h3>Bạn Có Chắc Chắn Xóa Lớp Học Phần Này Chứ  ? </h3>
    @if (ViewBag.canh_bao != null)
    {
        <div class="Warning">⚠️⚠️ Cảnh Báo : @ViewBag.canh_bao</div>
    }
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Xóa Tất Cả" class="btn1" />
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn2" })
        </div>
    }
</div>