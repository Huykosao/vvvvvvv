@model ManageStudentsV2.Models.Lop_chinh

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_ManageStudentHome.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="create-forms">
        <h4>Lớp Chính</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ma_lop)

        <div class="field">
            @Html.LabelFor(model => model.ten_lop,"Tên Lớp", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ten_lop, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ten_lop, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="field">
            @Html.LabelFor(model => model.giao_vien_chu_nhiem, "Giáo Viên Chủ Nhiệm", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("giao_vien_chu_nhiem", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.giao_vien_chu_nhiem, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="field">
            @Html.LabelFor(model => model.ma_nganh, "Ngành", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ma_nganh", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ma_nganh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="field">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn1" />
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn2" })
            </div>
        </div>
    </div>
}

